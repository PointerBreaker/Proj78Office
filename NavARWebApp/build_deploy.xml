<?xml version="1.0" ?> 
<project name="AntExample1" default="war">

	<path id="compile.classpath">
		<fileset dir="web/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="build/classes"/>
		<mkdir dir="dist" />
	<copy todir="build/classes/META-INF">
  		<fileset dir="src/conf">
   		</fileset>
	</copy>
	</target>
	
	<target name="compile" depends="init" >
		<javac destdir="build/classes" debug="true" srcdir="src">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="war" depends="generate-MetaModel">
		<war destfile="dist/NavARWebApp.war" webxml="web/WEB-INF/web.xml">
			<lib dir="web/WEB-INF/lib"/>
			<classes dir="build/classes"/>
		</war>
	</target>
	
	<target name="clean">
		<delete dir="dist" />
		<delete dir="build" />
	</target>

<target name="generate-MetaModel" depends="compile">
<property name="metaPackage" value="metamodel"/>
<delete>
    <fileset dir="src"  includes="\*\*/\*_.java"/>
</delete>
<echo message="Generating MetaData "/>
<javac   srcdir="src" verbose="false"
    destdir="src"
    excludes="demo/\*\*"
    classpath="${javac.classpath}">
    <compilerarg line=" -processor org.eclipse.persistence.internal.jpa.modelgen.CanonicalModelProcessor" />
    <compilerarg line=" -proc:only" compiler="javac1.6" />

</javac>

</target>	
</project>